#!/bin/bash
# Hackathon Builder - Mac 用起動スクリプト

# スクリプトのディレクトリに移動
cd "$(dirname "$0")"

echo "----------------------------------------------------"
echo "🚀 Hackathon Builder を起動しています..."
echo "----------------------------------------------------"

# Node.js の確認
if ! command -v node &> /dev/null
then
    echo "❌ Node.js が見つかりません。"
    echo "https://nodejs.org/ からインストールしてください。"
    echo "----------------------------------------------------"
    exec $SHELL
fi

# 初期化スクリプトの実行
npm run init

echo ""
echo "----------------------------------------------------"
echo "✅ 処理が完了しました。"
echo "このウィンドウは開いたままにしています。閉じても問題ありません。"
echo "----------------------------------------------------"

# ターミナルを終了せずに保持
exec $SHELL
