{
  "functions": {
    "source": "functions"
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/robots.txt",
        "destination": "/robots_dynamic",
        "type": 302
      }
    ],
    "rewrites": [
      {
        "source": "/admin.html",
        "destination": "/admin.html"
      },
      {
        "source": "/robots_dynamic",
        "function": "ssr"
      },
      {
        "source": "**",
        "function": "ssr"
      }
    ]
  }
}
