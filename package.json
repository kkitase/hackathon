{
  "name": "hackathon-builder",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "init": "node tools/init-project.js",
    "deploy": "node tools/confirm-account.js && npm run build && firebase deploy",
    "dev": "vite",
    "build": "vite build && cp dist/index.html functions/template.html && mv dist/index.html dist/_index.html",
    "preview": "vite preview",
    "setup": "node tools/setup.js",
    "demo-data": "node tools/demo-data.js",
    "reset-data": "node tools/confirm-account.js && node tools/demo-data.js",
    "delete-project": "node tools/confirm-account.js && node tools/delete-project.js"
  },
  "devDependencies": {
    "vite": "^6.0.0"
  },
  "dependencies": {
    "@playwright/browser-chromium": "^1.57.0",
    "@playwright/test": "^1.57.0",
    "firebase": "^12.7.0",
    "firebase-admin": "^13.6.0"
  }
}
